// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  login  String? @unique
  auctionSites AuctionSite[]
}

model Product {
  id    Int     @default(autoincrement()) @id
  name  String
  auctionSites AuctionSite[]
}

model AuctionSite {
  id        Int      @default(autoincrement()) @id
  name      String
  published Boolean? @default(false)
  products  Product[] @relation(references: [id])
  user    User?    @relation(fields: [userId], references: [id])
  userId  Int?
}

model CategoryTree {
  id  Int @default(autoincrement()) @id
  name String @unique
  position Int @unique
  subcategory CategoryTreeSubcategory[]
  subcategoryItem CategoryTreeSubcategoryItem[]
}

model CategoryTreeSubcategory {
  id  Int @default(autoincrement()) @id
  name String
  position Int
  parentId Int
  parent CategoryTree @relation(fields: [parentId], references: [id])
  children CategoryTreeSubcategoryItem[]
}

model CategoryTreeSubcategoryItem {
  id  Int @default(autoincrement()) @id
  name String
  position Int
  subcategoryId Int
  categoryId Int
  subcategory CategoryTreeSubcategory @relation(fields: [subcategoryId], references: [id])
  category CategoryTree @relation(fields: [categoryId], references: [id])
}